{
  "name": "@view-models/core",
  "version": "6.0.0",
  "description": "A lightweight, framework-agnostic library for building reactive view models with TypeScript",
  "keywords": [
    "view",
    "viewmodel",
    "reactive",
    "state",
    "typescript"
  ],
  "license": "MIT",
  "author": "Sune Simonsen",
  "repository": {
    "type": "git",
    "url": "https://github.com/sunesimonsen/view-models-core.git"
  },
  "bugs": {
    "url": "https://github.com/sunesimonsen/view-models-core/issues"
  },
  "homepage": "https://github.com/sunesimonsen/view-models-core#readme",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "docs": "typedoc && npm run format",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@vitest/coverage-v8": "^4.0.16",
    "prettier": "^3.7.4",
    "rollup": "^4.57.0",
    "rollup-plugin-dts": "^6.3.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public"
  }
}
